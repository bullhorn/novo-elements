{
  "name": "novo-elements-projects",
  "version": "2.13.0",
  "description": "Bullhorn's Novo-Elements repository, including core projects and tools",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "build": "ng build novo-elements",
    "build:watch": "ng build novo-elements --watch",
    "build:demo": "ng build novo-elements-demo",
    "start": "ng serve novo-elements-demo",
    "copy-scss": "node copy-scss.js",
    "test": "ng test",
    "lint": "ng lint",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master; npm run build; cd dist/novo-elements && echo \"Copy version from ./package.json to dist/novo-elements/package.json and run npm publish\"",
    "snapshot-publish": "bash snapshot-publish"
  },
  "lint-staged": {
    "*.{ts,json,scss,css,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@bullhorn/dragula": "1.0.1",
    "ace-builds": "1.3.1",
    "angular2-text-mask": "9.0.0",
    "brace": "0.11.1",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.4",
    "date-fns": "1.29.0",
    "hint.css": "2.5.0",
    "post-robot": "8.0.18",
    "rxjs": "^6.0.0",
    "text-mask-addons": "^3.7.1",
    "web-animations-js": "^2.3.1",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0-beta.0",
    "@angular-devkit/build-ng-packagr": "~0.8.0-beta.0",
    "@angular/cli": "~6.2.0-beta.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.2.0",
    "ng-packagr": "^4.0.0",
    "prettier": "^1.12.1",
    "standard-version": "^4.2.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  }
}
