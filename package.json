{
  "name": "novo-elements",
  "version": "2.2.0",
  "description": "Bullhorn's NOVO Element Repository for Angular 2",
  "license": "MIT",
  "scripts": {
    "start": "ng serve",
    "build": "copyfiles tsconfig.ngc.json node_modules/ng-packagr/lib/conf && ng-packagr -p ng-package.json && npm run copy-scss && npm run cleanup-dist",
    "copy-scss": "node copy-scss.js",
    "cleanup-dist": "rimraf dist/src",
    "build-ghpages": "ng build -prod -aot false --output-path \"dist-ghpages\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint --typeCheck --format codeFrame",
    "lint:fix": "ng lint --typeCheck --format codeFrame --fix",
    "precommit": "lint-staged",
    "format-code": "prettier --config ./.prettierrc --write '*.{ts,js,scss,css}'",
    "loc": "node_modules/sloc/bin/sloc src/platform --format json > ./coverage/sloc.json",
    "pregalaxy": "npm run loc",
    "preanalyze-mr": "npm run loc",
    "galaxy": "galaxy analyze",
    "analyze-mr": "galaxy analyze-mr",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master; npm run build; cd dist && npm publish",
    "snapshot-publish": "bash snapshot-publish"
  },
  "lint-staged": {
    "*.ts": ["tslint"],
    "*.{js,json,css,md,ts}": ["prettier --write", "git add"]
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest.ts",
    "testRegex": "src/platform/.*\\.spec\\.(ts|js)$",
    "collectCoverage": true,
    "coverageReporters": ["json", "lcov", "text", "text-summary", "html"],
    "collectCoverageFrom": [
      "src/platform/**/*.ts",
      "!src/platform/**/index.ts",
      "!src/platform/**/*.module.ts",
      "!src/platform/**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "keywords": ["angular2"],
  "author": "Joshua Godi <joshuagodi@gmail.com>",
  "contributors": [
    {
      "name": "Brian Kimball",
      "email": "bkimball@bullhorn.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bullhorn/novo-elements.git"
  },
  "bugs": {
    "url": "https://github.com/bullhorn/novo-elements/issues"
  },
  "homepage": "https://github.com/bullhorn/novo-elements#readme",
  "private": false,
  "peerDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0"
  },
  "dependencies": {
    "@bullhorn/bullhorn-icons": "^2.1.1",
    "pretty-quick": "^1.2.2",
    "roboto-fontface": "^0.8.0"
  },
  "devDependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/cdk": "^5.0.0",
    "@angular/cli": "1.5.4",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/cypress": "^0.1.1",
    "@types/faker": "^4.1.2",
    "@types/jest": "^20.0.6",
    "@types/node": "~6.0.60",
    "classlist.js": "^1.1.20150312",
    "codelyzer": "^4.0.1",
    "copyfiles": "^1.2.0",
    "core-js": "^2.4.1",
    "coveralls": "^3.0.0",
    "faker": "^4.1.0",
    "galaxy-parser": "^1.0.45",
    "glob": "^7.1.2",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "lint-staged": "^6.0.0",
    "markdown-loader": "^2.0.1",
    "ng-packagr": "^1.5.0-rc.1",
    "ng2-page-scroll": "^4.0.0-beta.12",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "rxjs": "5.5.2",
    "standard-version": "^4.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2",
    "zone.js": "0.8.14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "galaxy": {
    "display": "Novo Elements",
    "type": "javascript",
    "api": "github",
    "owner": "bullhorn",
    "repo": "novo-elements",
    "goal": 80,
    "public": true,
    "threshold": 0.05,
    "defaultBranch": "master",
    "locations": {
      "sloc": "/coverage/sloc.json",
      "lcov": "/coverage/lcov.info"
    }
  }
}
