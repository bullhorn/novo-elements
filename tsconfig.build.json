{
  "extends": "./tsconfig.json",
  "exclude": ["projects/**/test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "./dist/out-tsc/lib",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "paths": {
      // "novo-elements/ace-editor": ["dist/novo-elements/src/elements/ace-editor"],
      // "novo-elements/button": ["dist/novo-elements/src/elements/button"],
      "novo-elements": ["./dist/novo-elements"],
      "novo-examples": ["./dist/novo-examples"],
      "novo-elements/*": ["./dist/novo-elements/src/elements/*"],
      "novo-examples/*": ["./dist/novo-examples/*"],
      "ace-editor": ["elements/ace-editor"],
    }
  },
  "angularCompilerOptions": {
    "flatModuleId": "AUTOGENERATED",
    "flatModuleOutFile": "AUTOGENERATED"
  }
}