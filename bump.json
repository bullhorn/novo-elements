{
  "branches": [
    {
      "name": "master",
      "docs": {
        "dest": "docs/"
      }
    },
    {
      "name": "next",
      "prerelease": "next",
      "skipChangeLog": true,
      "docs": {
        "dest": "next"
      }
    }
  ],
  "docs": {
    "type": "ghpages",
    "dir": "docs",
    "build": {
      "preset": "angular",
      "app": "demo"
    }
  },
  "bundles": [
    {
      "type": "npm",
      "folder": "dist/novo-elements",
      "prepublish": "npm run build"
    }
  ],
  "bumpFiles": ["package.json", "projects/**/package.json"]
}
