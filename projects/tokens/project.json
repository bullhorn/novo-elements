{
  "root": "projects/tokens",
  "sourceRoot": "projects/tokens/src",
  "projectType": "library",
  "prefix": "novo",
  "architect": {
    "prebuild": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm run exec ./scripts/build-token.ts"
      },
      "dependsOn": [
        {
          "target": "preprocess",
          "projects": "self"
        }
      ]
    },
    "build": {
      "builder": "@angular-devkit/build-ng-packagr:build",
      "outputs": ["dist/icons"],
      "options": {
        "tsConfig": "tsconfig.build.json",
        "project": "projects/icons/ng-package.json"
      },
      "dependsOn": [
        {
          "target": "prebuild",
          "projects": "self"
        }
      ]
    },
    "publish": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm run exec -- ./scripts/publish.ts --path ./dist/icons"
      }
    }
  }
}
